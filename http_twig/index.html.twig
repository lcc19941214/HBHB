<!DOCTYPE html>
<html lang="zh-CN">
<head>
	<title>数字图片湖北</title>
	{% include 'SkatingCmsBundle:Front/blocks:head_info.html.twig' %}
</head>
<body>
    {% include 'SkatingCmsBundle:Front/blocks:header.html.twig' %}

    {% include 'SkatingCmsBundle:Front/blocks:filter.html.twig' %}

	{% block maincontent %}
	<div class="g-service">
		<div class="service-wrap">
			<div class="service container">
				<div class="title">
					<h1>
						服务
					</h1>
					<span>提供高端定制服务</span>
					<a href="service/atlas" class="more">
						查看更多 <i></i>
					</a>
				</div>
				<div class="service-list">
					<div class="service-item service-box-1">
						<a href="service/atlas">
							<img src="{{baseurl}}/theme/{{theme}}/images/service/service_bullet.jpg" alt="画册影集"></a>
							<img src="images/service/service_bullet.jpg" alt="画册影集"></a>
						<div class="subtitle">
							<div class="cover">	
								<h2>
									<a href="">画册影集</a>
								</h2>
							</div>
							<div class="mask"></div>
						</div>
					</div>
					<div class="service-item service-box-2">
						<a href="service/custom">
							<img src="{{baseurl}}/theme/{{theme}}/images/service/service_shoot.jpg" alt="定制服务"></a>
						<div class="subtitle">
							<div class="cover">	
								<h2>
									<a href="">定制摄影</a>
								</h2>
							</div>
							<div class="mask"></div>
						</div>
					</div>
					<div class="service-item service-box-3">
						<a href="service/documentary">
							<img src="{{baseurl}}/theme/{{theme}}/images/service/service_record.jpg" alt="记录跟拍"></a>
						<div class="subtitle">
							<div class="cover">	
								<h2>
									<a href="">记录跟拍</a>
								</h2>
							</div>
							<div class="mask"></div>
						</div>
					</div>
					<div class="service-item service-box-4">
						<a href="service/recopy">
							<img src="{{baseurl}}/theme/{{theme}}/images/service/service_product.jpg" alt="艺术品翻拍"></a>
						<div class="subtitle">
							<div class="cover">	
								<h2>
									<a href="">艺术品翻拍</a>
								</h2>
							</div>
							<div class="mask"></div>
						</div>
					</div>
					<div class="service-item service-box-5">
						<a href="service/training">
							<img src="{{baseurl}}/theme/{{theme}}/images/service/service_training.jpg" alt="摄影培训"></a>
						<div class="subtitle">
							<div class="cover">	
								<h2>
									<a href="">摄影培训</a>
								</h2>
							</div>
							<div class="mask"></div>
						</div>
					</div>
					<div class="service-item service-box-6">
						<a href="service/aerial">
							<img src="{{baseurl}}/theme/{{theme}}/images/service/service_flight.jpg" alt="航拍"></a>
						<div class="subtitle">
							<div class="cover">	
								<h2>
									<a href="">航拍</a>
								</h2>
							</div>
							<div class="mask"></div>
						</div>
					</div>
					<div class="service-item service-box-7">
						<a href="service/advertisement">
							<img src="{{baseurl}}/theme/{{theme}}/images/service/service_ad.jpg" alt="商业广告"></a>
						<div class="subtitle">
							<div class="cover">	
								<h2>
									<a href="">商业广告</a>
								</h2>
							</div>
							<div class="mask"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endblock %}

    {% include 'SkatingCmsBundle:Front/blocks:footer.html.twig' %}

	<script src="{{baseurl}}/theme/{{theme}}/js/main.min.js"></script>
	<script src="{{baseurl}}/theme/{{theme}}/js/module.min.js"></script>
	<script type="text/javascript">
		$(".g-service .service-item").each(function(){
			var $this = $(this);
			var href = $this.children("a").attr("href");
			$this.find(".subtitle a").attr("href",href);
		})
	</script>
</body>
</html>